<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ItemCountryRegionSelection"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/countryName"
        style="@style/Regular16"
        android:layout_width="@dimen/_0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_16dp"
        android:clickable="true"
        android:maxLines="1"
        android:paddingVertical="@dimen/_16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Страна" />

    <ImageView
        android:id="@+id/icArrowForward"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginEnd="@dimen/_16dp"
        android:backgroundTint="@android:color/transparent"
        android:src="@drawable/ic_arrow_forward"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@id/countryName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/countryName"
        app:tint="@color/black_day_white_night" />

</androidx.constraintlayout.widget.ConstraintLayout>
