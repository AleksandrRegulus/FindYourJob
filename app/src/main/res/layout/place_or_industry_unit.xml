<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true">

    <TextView
        android:id="@+id/big_title_text_view"
        style="@style/Regular16"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingVertical="@dimen/_20dp"
        android:paddingStart="@dimen/_16dp"
        android:paddingEnd="@dimen/_4dp"
        android:textColor="@color/gray"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/arrow_forward_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@string/area" />

    <ImageView
        android:id="@+id/arrow_forward_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/_16dp"
        android:importantForAccessibility="no"
        android:src="@drawable/selector_ic_arrow_forward"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/black_day_white_night" />

    <TextView
        android:id="@+id/small_title_text_view"
        style="@style/Regular12"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/_16dp"
        android:paddingTop="@dimen/_16dp"
        android:paddingEnd="@dimen/_4dp"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/small_value_text_view"
        app:layout_constraintEnd_toStartOf="@id/arrow_forward_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        tools:text="@string/area" />

    <TextView
        android:id="@+id/small_value_text_view"
        style="@style/Regular16"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/_16dp"
        android:paddingEnd="@dimen/_4dp"
        android:paddingBottom="@dimen/_16dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/arrow_forward_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/small_title_text_view"
        tools:text="Россия, Москва" />

</androidx.constraintlayout.widget.ConstraintLayout>
