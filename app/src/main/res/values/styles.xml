<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Bold32">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/_32sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Medium22">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/_22sp</item>
    </style>

    <style name="Medium16">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/_16sp</item>
    </style>

    <style name="Regular16">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/_16sp</item>
    </style>

    <style name="Regular12">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/_12sp</item>
    </style>

    <style name="PrimaryButton">
        <item name="android:backgroundTint">@color/blue</item>
        <item name="android:paddingHorizontal">@dimen/_8dp</item>
        <item name="android:paddingVertical">@dimen/_20dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAppearance">@style/Medium16</item>
        <item name="cornerRadius">@dimen/_12dp</item>
    </style>

    <style name="TertiaryButton">
        <item name="android:backgroundTint">@android:color/transparent</item>
        <item name="android:paddingHorizontal">@dimen/_8dp</item>
        <item name="android:paddingVertical">@dimen/_20dp</item>
        <item name="android:textColor">@color/red</item>
        <item name="android:textAppearance">@style/Medium16</item>
        <item name="cornerRadius">@dimen/_12dp</item>
    </style>

    <style name="MainBottomNavigationView" parent="@style/Widget.MaterialComponents.BottomNavigationView">
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="elevation">@dimen/_0dp</item>
        <item name="itemIconTint">@drawable/bottom_navigation_selector</item>
        <item name="itemTextAppearanceActive">@style/Regular12</item>
        <item name="itemTextAppearanceInactive">@style/Regular12</item>
        <item name="itemTextColor">@drawable/bottom_navigation_selector</item>
    </style>

    <style name="TextFieldLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:textColorHint">@color/gray</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/_12dp</item>
        <item name="boxCornerRadiusBottomStart">@dimen/_12dp</item>
        <item name="boxCornerRadiusTopEnd">@dimen/_12dp</item>
        <item name="boxCornerRadiusTopStart">@dimen/_12dp</item>
        <item name="boxStrokeWidth">@dimen/_0dp</item>
        <item name="boxStrokeWidthFocused">@dimen/_0dp</item>
        <item name="hintTextAppearance">@style/Regular12</item>
        <item name="cursorColor">@color/blue</item>
        <item name="hintTextColor">@color/blue</item>
    </style>

    <style name="TextField">
        <item name="android:backgroundTint">@color/light_gray</item>
        <item name="android:maxLines">1</item>
        <item name="android:textAppearance">@style/Regular16</item>
        <item name="android:textColorHint">@color/gray</item>
    </style>

    <style name="TeamMember" parent="Medium16">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/_16dp</item>
    </style>

</resources>
