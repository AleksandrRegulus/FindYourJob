<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextFieldLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:textColorHint">@color/white</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/_12dp</item>
        <item name="boxCornerRadiusBottomStart">@dimen/_12dp</item>
        <item name="boxCornerRadiusTopEnd">@dimen/_12dp</item>
        <item name="boxCornerRadiusTopStart">@dimen/_12dp</item>
        <item name="boxStrokeWidth">@dimen/_0dp</item>
        <item name="boxStrokeWidthFocused">@dimen/_0dp</item>
        <item name="hintTextAppearance">@style/Regular12</item>
        <item name="cursorColor">@color/blue</item>
        <item name="hintTextColor">@color/blue</item>
    </style>

    <style name="TextField">
        <item name="android:backgroundTint">@color/gray</item>
        <item name="android:maxLines">1</item>
        <item name="android:textAppearance">@style/Regular16</item>
        <item name="android:textColorHint">@color/white</item>
    </style>

</resources>
